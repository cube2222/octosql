{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "module": "esnext",
        "importHelpers": true,
        "target": "esnext",
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "lib": ["es5", "es6", "dom", "es2018"],
        "baseUrl": "./",
        "experimentalDecorators": true,
        "allowJs": true,
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "include": [
        "./src/**/*"
    ],
    "awesomeTypescriptLoaderOptions": {
        "transpileOnly": true
    }
}
